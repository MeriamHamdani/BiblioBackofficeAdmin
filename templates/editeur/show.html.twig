{% extends 'base.html.twig' %}

{% block title %}Editeur{% endblock %}

{% block body %}
    <h1>Editeur</h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>#</th>
                <td>{{ editeur.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ editeur.nom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ editeur.adress }}</td>
            </tr>
            <tr>
                <th>Pays</th>
                <td>{{ editeur.pays }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ editeur.telephone }}</td>
            </tr>
        </tbody>
    </table>

    

    <a href="{{ path('editeur_edit', {'id': editeur.id}) }}" class="btn btn-success text-white mdi mdi-lead-pencil"> Editer</a><br><br> {{ include('editeur/_delete_form.html.twig') }}
    <br><a href="{{ path('editeur_index') }}"><h4 class="mdi mdi-arrow-left-box">Retour</h4></a>

{% endblock %}
