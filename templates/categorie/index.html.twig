{% extends 'base.html.twig' %}

{% block title %}Catégories {% endblock %}

{% block body %}
    <h1>Catégories </h1>
    <div class="text-end upgrade-btn">
        <a href="{{path('categorie_new')}}" class="btn btn-danger text-white"> <i class="fa fa-plus-square"></i> Ajouter nouvelle Catégorie</a><br>
    </div> <br> 
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for i, categorie in categories %}
            <tr>
                <td>{{ i + 1 }}</td>
                <td>{{ categorie.nom }}</td>
                <td>
                    <a href="{{ path('categorie_show', {'id': categorie.id}) }}"><i class="mdi mdi-eye"></i></a>
                    <a href="{{ path('categorie_edit', {'id': categorie.id}) }}"><i class="mdi mdi-pencil-circle"></i></a>
                    <a href="{{ path('categorie_delete_2', {'id': categorie.id}) }}"><i class="mdi mdi-delete-circle"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Pas d'enregistrements trouvés</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
